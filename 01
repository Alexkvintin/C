#include <iostream>
#include <conio.h>
#include <cstring>
using namespace std;

int main()
{    
    char a[100];
    cout << "введите строку:" << endl;
    cin >> a;
    string cmd = "quit";
    if (a != cmd)
    {
     cout << "Количество символов в строке = "<< strlen(a) << endl;
    }
    else
    {
     cout << "работа программы завершена" << endl;
    }
    return 0;
}
